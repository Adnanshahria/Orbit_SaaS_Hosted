{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}